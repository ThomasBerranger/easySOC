{% extends 'base.html.twig' %}

{% block title 'Admin' %}

{% block body %}

    <main class="app-content">

        <div class="row">
            <div class="col-12">
                <div class="tile">
                    <h3 class="tile-title text-center">Users list</h3>

                    <a href="{{ path('register') }}" class="btn btn-success"><i class="fas fa-user-plus"></i>&nbsp; Create a new user</a>
                    <br><br>

                    <table id="users" class="table table-hover table-bordered dataTable no-footer">
                        <thead>
                        <tr>
                            <th scope="col">Username</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">First Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Company</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td scope="row" class="align-middle">{{ user.username }}</td>
                                <td class="align-middle">{{ user.lastname }}</td>
                                <td class="align-middle">{{ user.firstname }}</td>
                                <td class="align-middle">{{ user.email }}</td>
                                <td class="align-middle">{{ user.company? user.company.name : null }}</td>
                                <td class="align-middle">
                                    <a href="{{ path('user.edit', {id: user.id}) }}" class="btn btn-primary">Editer</a>
                                </td>
                                <td class="align-middle">
                                    <form method="post" action ="{{ path('user.delete', {id: user.id})}}">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button class="btn btn-danger">Supprimer</button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>
        </div>

    </main>


{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready( function () {
            $('#users').DataTable();
        } );
    </script>
{% endblock %}