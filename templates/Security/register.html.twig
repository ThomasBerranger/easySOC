{% extends 'base.html.twig' %}

{% block title 'Login' %}

{% block body %}

    <main class="app-content">
        <div class="container">

            {{ form_start(form) }}
            {{ form_row(form.firstname) }}
            {{ form_row(form.lastname) }}
            {{ form_row(form.email) }}
            {{ form_row(form.plainPassword.first) }}
            {{ form_row(form.plainPassword.second) }}

            <div class="text-center">
                <button type="submit" class="btn btn-outline-success"><i class="fas fa-user-plus"></i> &nbsp;Create the account</button>
            </div>

            {{ form_end(form) }}

        </div>
    </main>

{% endblock %}
