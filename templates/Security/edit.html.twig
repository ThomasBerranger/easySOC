{% extends 'base.html.twig' %}

{% block title 'Edit' %}

{% block body %}

    <main class="app-content">
        <div class="container">

            {{ form_start(form) }}

            {{ form_row(form.firstname) }}
            {{ form_row(form.lastname) }}
            {{ form_row(form.email) }}

            <div class="text-center">
                <button type="submit" class="btn btn-outline-success"><i class="fas fa-edit"></i> Edit</button>
            </div>

            {{ form_end(form) }}

        </div>
    </main>

{% endblock %}
