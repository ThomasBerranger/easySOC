{% extends 'base.html.twig' %}

{% block title 'Edit' %}

{% block body %}

    <main class="app-content">
        <div class="container">

            <div class="row">
                <div class="col-12">
                    <div class="tile">
                        <h3 class="tile-title text-center">Password edition</h3>

                        <div class="bs-component">
                            {% for message in app.flashes('success') %}
                                <div class="alert alert-dismissible alert-success">
                                    <button class="close" type="button" data-dismiss="alert">×</button>
                                    <strong>{{ message }}</strong>
                                </div>
                            {% endfor %}
                            {% for message in app.flashes('error') %}
                                <div class="alert alert-dismissible alert-danger">
                                    <button class="close" type="button" data-dismiss="alert">×</button>
                                    <strong>{{ message }}</strong>
                                </div>
                            {% endfor %}
                        </div>

                        {{ form_start(form) }}

                        {{ form_row(form.oldPassword) }}
                        {{ form_row(form.plainPassword) }}

                        <div class="text-center">
                            <button type="submit" class="btn btn-outline-success"><i class="fas fa-save"></i> Save changes</button>
                            <hr>
                            <a href="{{ path('security.edit') }}" class="text-info">Account edition</a>
                        </div>

                        {{ form_end(form) }}

                    </div>
                </div>
            </div>

        </div>
    </main>

{% endblock %}
