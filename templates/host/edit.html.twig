{% extends 'base.html.twig' %}

{% block title 'Edit Host' %}

{% block body %}

    <main class="app-content">
        <div class="container container--edithost">
        <h1 class="title--edithost">Edit Host</h1>

            {{ form_start(form) }}
            {{ form_row(form.OS) }}
            {{ form_row(form.Port) }}
            {{ form_row(form.IP) }}
            {{ form_row(form.Service) }}
            
            <button type="submit" class="btn btn-outline-success">Edit</button>

            {{ form_end(form) }}

            <form method="post" action ="{{ path('host.delete', {id: host.id})}}">
                <input type="hidden" name="_method" value="DELETE">
                <button class="btn btn-danger btn--deletehost">Delete</button>
            </form>



        </div>
    </main>

{% endblock %}
