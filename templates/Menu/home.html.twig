{% extends 'base.html.twig' %}

{% block body %}

    <main class="app-content">

        <div class="row">
            <div class="col-md-9">
                <div class="tile text-center">
                    <h3 class="tile-title">General history</h3>
                    <canvas id="general-history"></canvas>
                </div>
                {% include 'Charts/template.html.twig' with chartData %}
            </div>
            <div class="col-3">
                <div class="row">
                    <div class="col-12">
                        <div class="widget-small primary coloured-icon">
                            <i class="icon fas fa-heartbeat fa-3x"></i>
                            <div class="info">
                                <h4>Health</h4>
                                <p><b>6/10</b></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="widget-small danger coloured-icon">
                            <i class="icon fas fa-bell fa-3x"></i>
                            <div class="info">
                                <h4>Alerts</h4>
                                <p><b>4</b></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="widget-small info coloured-icon">
                            <i class="icon fas fa-thermometer-quarter fa-3x"></i>
                            <div class="info">
                                <h4>Global state</h4>
                                <p><b class="text-success">Fine</b></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="tile">

                    <table id="vulnerabilities" class="table table-striped table-hover" width="100%">
                        <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Lastname</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td>Mark</td>
                            <td>Otto</td>
                        </tr>
                        <tr>
                            <th scope="row">2</th>
                            <td>Jacob</td>
                            <td>Thornton</td>
                        </tr>
                        <tr>
                            <th scope="row">3</th>
                            <td>Larry</td>
                            <td>the Bird</td>
                        </tr>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>

    </main>

{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready( function () {
            $('#vulnerabilities').DataTable();
        } );
    </script>
{% endblock %}

